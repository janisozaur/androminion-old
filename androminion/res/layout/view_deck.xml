<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pirates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/victoryTokens"
        android:background="@drawable/pirates"
        android:textColor="#ffff00"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/victoryTokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pirates"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/victorytokens"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/guildsCoinTokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/pirates"
        android:background="@drawable/guildscointokens"
        android:textColor="#0000FF"
        android:textSize="12sp"
        android:visibility="invisible" />

</merge>